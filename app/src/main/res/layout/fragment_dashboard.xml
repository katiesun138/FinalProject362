<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
        <View
            android:id="@+id/header_toolbar_padding"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"/>


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_toolbar_padding"
            android:id="@+id/firstDiscoverHeader">

            <TextView
                android:id="@+id/text_Dashboard"
                android:text="Welcome to Job Central"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textDiscoverJobs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_Dashboard"
                android:text="Discover Jobs ðŸ”¥"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/touxiang"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/text_Dashboard"/> <!-- Align to the top of text_Dashboard -->

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstDiscoverHeader"
            android:id="@+id/searchAndFilter">

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:queryHint="Search Jobs"/>

            <ImageView
                android:id="@+id/iconFilter"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/filtericon"
                android:layout_alignTop="@id/searchView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchAndFilter"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Jobs"
                android:textSize="16dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:id="@+id/history_job_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/history_job_1_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/google"
                        android:paddingBottom="20dp"/>
                    <TextView
                        android:id="@+id/history_job_1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Engineer"
                        android:layout_toEndOf="@id/history_job_1_logo"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/history_job_1_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:layout_below="@id/history_job_1_title"
                        android:layout_toEndOf="@id/history_job_1_logo"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/history_job_1_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_job_date"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/history_job_1_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seattle, US"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/history_job_1_date"
                        android:textSize="13sp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:id="@+id/history_job_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/history_job_2_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/figma"
                        android:paddingBottom="20dp"/>
                    <TextView
                        android:id="@+id/history_job_2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Engineer II"
                        android:layout_toEndOf="@id/history_job_2_logo"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/history_job_2_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Figma"
                        android:layout_below="@id/history_job_2_title"
                        android:layout_toEndOf="@id/history_job_2_logo"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/history_job_2_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_job_date"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/history_job_2_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New York, US"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/history_job_2_date"
                        android:textSize="13sp"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Item 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                <RelativeLayout
                    android:id="@+id/history_job_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/history_job_3_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/figma"
                        android:paddingBottom="20dp"/>
                    <TextView
                        android:id="@+id/history_job_3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dev-ops Engineer"
                        android:layout_toEndOf="@id/history_job_3_logo"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/history_job_3_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Figma"
                        android:layout_below="@id/history_job_3_title"
                        android:layout_toEndOf="@id/history_job_3_logo"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/history_job_3_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_job_date"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/history_job_3_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New York, US"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/history_job_3_date"
                        android:textSize="13sp"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


<!--            item 4-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:id="@+id/history_job_4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/history_job_4_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/google"
                        android:paddingBottom="20dp"/>
                    <TextView
                        android:id="@+id/history_job_4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Front-End Software Engineer"
                        android:layout_toEndOf="@id/history_job_4_logo"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/history_job_4_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:layout_below="@id/history_job_4_title"
                        android:layout_toEndOf="@id/history_job_4_logo"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/history_job_4_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_job_date"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/history_job_4_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Washington, US"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/history_job_4_date"
                        android:textSize="13sp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>


</RelativeLayout>
</FrameLayout>

