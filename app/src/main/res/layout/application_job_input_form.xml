<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="?attr/actionBarSize">

    <EditText
        android:id="@+id/company_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company Name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/position_title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Position Title"
        android:inputType="text"/>

    <EditText
        android:id="@+id/job_type_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Job Type"
        android:inputType="text"/>

    <EditText
        android:id="@+id/link_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Link"
        android:inputType="text"/>

    <EditText
        android:id="@+id/location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:inputType="text"/>

    <Spinner
        android:id="@+id/job_status_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="none"
        android:entries="@array/status_options" />

    <TextView
        android:id="@+id/error_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#FF0000"
        android:visibility="gone"
        android:text="This field is required"/>



</LinearLayout>
