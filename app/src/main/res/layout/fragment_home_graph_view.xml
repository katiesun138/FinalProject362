<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Spinner
        android:id="@+id/history_graph_mode_spinner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        />

    <com.anychart.AnyChartView
        android:id="@+id/history_graph"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/history_graph_mode_spinner" />

    <View
        android:id="@+id/history_graph_spacer"
        android:layout_width="0dp"
        android:layout_height="500dp" />
    <Button
        android:id="@+id/history_export_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_alignBottom="@id/history_graph_spacer"/>
</RelativeLayout>