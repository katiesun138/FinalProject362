<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/history_status_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_status_dialog_title"
        android:textSize="30sp"/>

    <LinearLayout
        android:id="@+id/history_status_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_status_dialog_title"
        android:layout_toEndOf="@id/history_status_dialog_buttons"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/history_status_dialog_applied"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/history_status_dialog_interviewing"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/history_status_dialog_offered"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/history_status_dialog_rejected"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/history_status_dialog_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_status_dialog_title" >

        <RadioButton
            android:id="@+id/history_status_dialog_applied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/history_status_dialog_interviewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/history_status_dialog_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/history_status_dialog_rejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>
    <Button
        android:id="@+id/history_status_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_status_dialog_cancel"
        android:textSize="20sp"
        android:layout_below="@id/history_status_dialog_text"
        android:layout_alignEnd="@id/history_status_dialog_text"
        android:layout_marginTop="20dp" />

</RelativeLayout>